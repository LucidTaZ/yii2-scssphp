{
    "name": "lucidtaz/yii2-scssphp",
    "description": "Yii2 bindings for leafo/scssphp",
    "type": "library",
    "license": [
        "MIT"
    ],
    "require": {
        "php": ">=7.0.0",
        "yiisoft/yii2": "^2.0",
        "leafo/scssphp": "^0.6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "phpstan/phpstan": "^0.7.0"
    },
    "autoload": {
        "psr-4": { "lucidtaz\\yii2scssphp\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "lucidtaz\\yii2scssphp\\tests\\": "tests/" }
    },
    "authors": [
        {
            "name": "Thijs Zumbrink",
            "email": "thijs@schalpoen.nl"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "stan": "@php vendor/bin/phpstan analyse src tests --level=1 --autoload-file=vendor/yiisoft/yii2/Yii.php",
        "ci": [
            "@test",
            "@stan"
        ]
    }
}
